<h1 class="text-3xl">Submit a Bug</h1>

<%= form_with model: @bug do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
        <% @bug.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :description %>
        <%= form.text_area :description %>
        <% @bug.errors.full_messages_for(:description).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>
